extends layout

block content
  h1= title
  p= 'Force graph of single journeys around the site'
  form(method='get')
    label= 'Referring host'
      select(name='referring-host')
        option(value='')= ''
        option(value='*google*')= 'google'
        option(value='*yahoo*')= 'yahoo'
        option(value='*bing*')= 'bing'
        option(value='*guardian*')= 'guardian'
    label= 'Size'
      select(name='size')
        option(value='50')= '50'
        option(value='100')= '100'
        option(value='200')= '200'
        option(value='500', selected='selected')= '500'
        option(value='1000')= '1000'
    input(type='submit', value='Filter')
  style
    .node {
      stroke: #fff;
      stroke-width: 1.5px;
    }

    .link {
      stroke: #999;
      stroke-opacity: .6;
    }
  script(type='text/javascript', src='/javascripts/bootstraps/force.js')